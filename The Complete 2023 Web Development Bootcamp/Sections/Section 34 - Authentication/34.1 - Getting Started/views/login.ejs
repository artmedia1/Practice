<%- include('partials/header') %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container mt-5">
  <h1>Login</h1>

  <!-- Display error message -->
  <% if (locals.error) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="username">
              <!-- Custom alert for invalid email -->
              <div class="invalid-feedback" style="display: none;">
                Please enter a valid email address.
              </div>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

    <!-- Optional Google Sign In Section -->
    <!-- <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div> -->

  </div>
</div>

<script>
  $(document).ready(function() {
    const emailInput = $('#email');
    const emailAlert = $('.invalid-feedback');

    emailInput.on('input', function() {
      if (emailInput.val() && emailInput[0].validity.typeMismatch) {
        emailAlert.show();
        emailInput[0].setCustomValidity("Please enter a valid email address.");
      } else {
        emailAlert.hide();
        emailInput[0].setCustomValidity("");
      }
    });
  });
</script>

<%- include('partials/footer') %>
